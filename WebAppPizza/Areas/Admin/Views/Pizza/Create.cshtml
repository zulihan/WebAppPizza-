@model WebAppPizza.Areas.Admin.Models.PizzaViewModel

@{
    ViewData["Title"] = "Create";
}

    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <h2>Ajout de pizza</h2>

            <form asp-action="Create" class="form-horizontal" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <div class="form-group">
                                <label asp-for="Title" class="col-md-2 control-label"></label>
                                <div class="col-md-10">
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="col-md-2 control-label"></label>
                                <div class="col-md-10">
                                    <textarea asp-for="Description" class="form-control"></textarea>
                                    <span asp-validation-for="Description" class="text-danger" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="PriceHT" class="col-md-2 control-label"></label>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <div class="input-group-addon">HT</div>
                                        <input asp-for="PriceHT" class="form-control" />
                                        <div class="input-group-addon">€</div>
                                    </div>
                                    <span asp-validation-for="PriceHT" class="text-danger" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Image" class="col-md-2 control-label"></label>
                                <div class="col-md-10">
                                    <span class="btn btn-primary btn-block fileinput-button">
                                        <span>Choisissez une image de pizza</span>
                                        <input type="file" asp-for="UploadImage" />
                                    </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="AddNewPizza" class="col-md-2 control-label">Ajouter une autre pizza ?</label>
                                <div class="col-md-10">
                                    <input type="checkbox" asp-for="AddNewPizza">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3  col-md-offset-3 text-left vcenter">
                        <a asp-action="Index">Retour à la liste</a>
                    </div>
                    <div class="col-md-3 text-right vcenter">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </form>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



